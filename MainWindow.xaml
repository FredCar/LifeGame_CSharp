<Window x:Class="LifeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifeGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="blanc" Color="White"/>
        <SolidColorBrush x:Key="noir" Color="Black"/>
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="571*"/>
                <ColumnDefinition Width="229*"/>
            </Grid.ColumnDefinitions>
            
            <Grid x:Name="playground" Loaded="playgroundLoaded" Margin="10,10,10,10">
            </Grid>   
            
            <TextBox x:Name="textBoxInfo" Grid.Column="1" Background="#FFDFDFDF" Height="250" VerticalAlignment="Top" Margin="30,30,30,30" TextAlignment="Center" FontSize="10" FontWeight="Normal" AcceptsReturn="True" />
            <Button x:Name="btnStart" Content="Start" Grid.Column="1" Width="150" Height="50" FontSize="36" FontWeight="Bold" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="startClick"/>
        </Grid>

    </Grid>
</Window>
